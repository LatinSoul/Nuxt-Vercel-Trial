{
    "version": 2,
    "routes": [
        {
            "src": "/api/hello",
            "dest": "/api/hello.js"
        },
        {
            "src": "/api/login",
            "dest": "/api/index.js"
        }
    ],
    "builds": [
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        },
        {
            "src": "nuxt.config.js",
            "use": "@nuxtjs/vercel-builder",
            "config": {
                "serverFiles": [
                    "api/**"
                ]
            }
        }
    ]
}